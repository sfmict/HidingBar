package-as: HidingBar

externals:
	HidingBar/libs/LibStub: https://repos.curseforge.com/wow/libstub/trunk
	HidingBar/libs/CallbackHandler-1.0: https://repos.curseforge.com/wow/callbackhandler/trunk/CallbackHandler-1.0
	HidingBar/libs/LibDataBroker-1.1: https://github.com/tekkub/libdatabroker-1-1
	HidingBar/libs/LibDBIcon-1.0: https://repos.curseforge.com/wow/libdbicon-1-0/trunk/LibDBIcon-1.0
	HidingBar_Options/libs/LibSFDropDown: https://github.com/sfmict/LibSFDropDown

enable-nolib-creation: no

manual-changelog:
	filename: CHANGELOG.md
	markup-type: markdown

ignore:
	- README.md
	- CHANGELOG.md
	- HidingBar/libs/LibStub/LibStub.toc
	- HidingBar/libs/LibStub/tests
	- HidingBar/libs/LibDataBroker-1.1/README.textile
	- HidingBar/libs/LibDBIcon-1.0/lib.xml
	- HidingBar_Options/libs/LibSFDropDown/LibSFDropDown.toc
	- HidingBar_Options/libs/LibSFDropDown/LibSFDropDown_TBC.toc
	- HidingBar_Options/libs/LibSFDropDown/LibSFDropDown_Vanilla.toc

move-folders:
	HidingBar/HidingBar: HidingBar
	HidingBar/HidingBar_Options: HidingBar_Options